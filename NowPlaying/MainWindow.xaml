<Window x:Class="NowPlaying.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Now Playing" Height="60" Width="200" ResizeMode="NoResize" Background="#FF282828" WindowStyle="None" Deactivated="Window_Deactivated">
	<Grid>
		<TextBlock x:Name="TbTitle" HorizontalAlignment="Left" Margin="60,10,0,0" Text="Title" VerticalAlignment="Top" Foreground="White" Width="130" TextTrimming="CharacterEllipsis"/>
		<TextBlock x:Name="TbArtist" HorizontalAlignment="Left" Margin="60,34,0,0" VerticalAlignment="Top" Foreground="DarkGray" Width="130" Text="Artist" TextTrimming="CharacterEllipsis"/>
		<Image HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Source="Images/spotify.png" Margin="10,10,0,0"/>
	</Grid>
</Window>