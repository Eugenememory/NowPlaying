<Window x:Class="NowPlaying.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Now Playing" Height="60" Width="200" ResizeMode="NoResize" Background="#FF1E1E1E" WindowStyle="None" Deactivated="Window_Deactivated" Icon="Images/music.png" ShowInTaskbar="False">
	<Grid>
		<tb:TaskbarIcon IconSource="Images/music.ico" ToolTipText="NowPlaying">
			<tb:TaskbarIcon.ContextMenu>
				<ContextMenu>
					<MenuItem Header="Quit" Click="MenuItem_Click" />
				</ContextMenu>
			</tb:TaskbarIcon.ContextMenu>
		</tb:TaskbarIcon>
		<TextBlock x:Name="TbTitle" HorizontalAlignment="Left" Margin="60,10,0,0" Text="Title" VerticalAlignment="Top" Foreground="White" Width="130" TextTrimming="CharacterEllipsis"/>
		<TextBlock x:Name="TbArtist" HorizontalAlignment="Left" Margin="60,34,0,0" VerticalAlignment="Top" Foreground="DarkGray" Width="130" Text="Artist" TextTrimming="CharacterEllipsis"/>
		<Image x:Name="ImgIcon" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Source="Images/music.png" Margin="10,10,0,0" RenderTransformOrigin="0.5,0.5"/>
	</Grid>
</Window>